{
    "name": "Better Search",
    "description": "Enhances your experience with search engines like Google and DuckDuckGo",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "webNavigation",
        "storage",
        "https://www.google.com/",
        "https://stackoverflow.com/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_icon": {
            "256": "images/icon_96.png"
        }
    },
    "icons": {
        "256": "images/icon_96.png"
    },
    "web_accessible_resources": ["stylesheets/*.css", "scripts/*.js"],
    "content_scripts": [
        {
            "matches": ["https://www.google.com/*", "https://google.com/*"],
            "css": ["stylesheets/google_darkmode.css", "stylesheets/snippets.css"],
            "js": ["scripts/snippets.js", "scripts/stackoverflow_snippets.js"]
        }
    ],
    "manifest_version": 2
}
